        static int CoinFlip()
        {
            int coinFlip = 0; // 1 = Rock, 2 = Paper, 3 = Scissors
            // Code to randomly pick a 1 or 2.
            
            // From Amarion: Why would a 2 sided coin have a 3rd option?

            if (coinFlip == 1)
            {
                Console.WriteLine("It's heads\n");
            }
            else
            {
                Console.WriteLine("It's Tails\n");
            }
            return coinFlip;
        }

